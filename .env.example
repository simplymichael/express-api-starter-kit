NAME=ExpressApiStarterKit
HOST=http://localhost
PORT=3000
API_VERSION=1
NODE_ENV=production
URL_SCHEME=http
USE_WWW=0

EMAIL_SENDER_DOMAIN=express-api-starter.com

# key to use with SET DEBUG=<key>
DEBUG_KEY="express-api-starter-kit"

# CONNECTION PARAMETERS (Database, Cache, Notifications)

## Database (MongoDB) connection settings

### Either set the full MongoDB DSN here...
DB_DSN=

### ... Or use MongoDB environment variables
DB_HOST="0.0.0.0"
DB_USERNAME=
DB_PASSWORD=
DB_DBNAME=users
DB_PORT=27017

## Cache and temporary storage (Redis)
### Either set the DSN or set the individual connection options
### If we set the DSN, the individual connection options are ignored
REDIS_DSN=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DATABASE=1

## Notifications (Novu)
NOVU_API_KEY=

## Remote logging (LogTail)
LOGTAIL_SOURCE_TOKEN=

# Session (express-session) settings
SESSION_NAME="connect.sid"
SESSION_COOKIE_DOMAIN=localhost
SESSION_COOKIE_PATH="/"

## Session expiry time (in minutes, 0 indicates no expiry)
SESSION_EXPIRY=0
SESSION_SECRET="secretString$%^134"

# Access/Authorization token sign key
AUTH_TOKEN_SECRET=secret

# Access/Authorization token expiry (in seconds)
AUTH_TOKEN_EXPIRY="60 * 60 * 24"

## User email verification code expiry time (in minutes, 0 indicates no expiry)
VERIFICATION_CODE_EXPIRY=60

# Password customization
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=20
DISALLOWED_PASSWORDS=password,passw0Rd,secret,Passw0rd,Password123

# Special characters one of which must appear in the password
#  Kindly wrap them in quotes
PASSWORD_SPECIAL_CHARS="@!$#&%^*?"

# CORS settings (separate multiple origins by spaces or comma or semicolon)
ALLOWED_ORIGINS="http://localhost  http://localhost:3000"
